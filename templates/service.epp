<%- | String $desc,
      String $user,
      String $group,
      String $start,
      Optional[String] $stop = undef,
      String $workdir,
      Optional[String] $env = undef
| -%>
# This file is managed by Puppet; changes may be overwritten.
[Unit]
Description=<%= $desc %>
Wants=network-online.target
After=network-online.target

[Service]
Type=simple
WorkingDirectory=<%= $workdir %>
<% unless $env =~ Undef { -%>
Environment=<%= $env %>
<% } -%>
ExecStart=<%= $start %>
<% unless $stop =~ Undef { -%>
ExecStop=<%= $stop %>
<% } -%>
Restart=on-failure
RestartSec=42s
User=<%= $user %>
Group=<%= $group %>

[Install]
WantedBy=multi-user.target
